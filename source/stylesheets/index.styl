@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family "Gotham Rounded SSm A","Gotham Rounded SSm B","Gotham Rounded",sans-serif

.header
  background url('/on-tour-banner.jpg')
  background-position 50% 50%
  background-size cover
  background-repeat no-repeat

  .page-title
    font-weight 300
    font-size 5rem
    text-align center
    padding 100px
    text-transform uppercase
    color #fff

.nav
  background #363636
  text-align center

  li
    display inline-block

  a
    display inline-block
    padding 20px
    color #fff
    text-decoration none

    &:hover
      background-color #FF3C57
      text-decoration underline

.main-content
  margin 50px auto
  max-width 600px

  .main-title
    text-align center
    margin-bottom 2em

  p
    line-height 1.6
    margin-bottom 1.7em

.footer
  margin 50px auto
  max-width 600px
  border-top 1px solid #444
  padding 20px 0

  p
    color #444
    font-size 12px
  a
    color #444
    font-size 12px
